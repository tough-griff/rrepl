{
  "name": "rrepl",
  "version": "1.1.0",
  "description": "An improved node REPL with support for configuration.",
  "keywords": [
    "REPL"
  ],
  "author": "Griffin Yourick <gryphon92@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tough-griff/rrepl.git"
  },
  "main": "index.js",
  "bin": "index.js",
  "files": [
    "index.js"
  ],
  "engines": {
    "node": ">= 8.0.0"
  },
  "scripts": {
    "start": "node index",
    "test": "node index -c .noderc.example"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "semver": "^6.2.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "lodash": "^4.17.14"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js|.noderc.*": [
      "eslint --no-ignore --fix",
      "git add"
    ]
  }
}
