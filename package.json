{
  "name": "rrepl",
  "version": "1.3.3",
  "description": "An improved node REPL with support for configuration.",
  "keywords": [
    "cli",
    "REPL"
  ],
  "author": "Griffin Yourick <gryphon92@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tough-griff/rrepl.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "rrepl": "lib/cli.js"
  },
  "files": [
    "lib/cli.js",
    "lib/index.d.ts",
    "lib/index.js"
  ],
  "engines": {
    "node": ">= 10.0.0"
  },
  "scripts": {
    "prebuild": "rimraf lib/",
    "build": "tsc --build src",
    "lint": "eslint src/",
    "start": "node lib/cli",
    "test": "jest src/",
    "test:cov": "nyc --reporter lcov --reporter text npm test",
    "prepare": "husky install"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^7.2.0",
    "semver": "^7.3.5",
    "tslib": "^1.14.1"
  },
  "devDependencies": {
    "@tough-griff/eslint-config-typescript": "^1.1.9",
    "@types/jest": "^26.0.22",
    "@types/semver": "^7.3.4",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "codecov": "^3.8.1",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.21",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tmp-promise": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "eslintConfig": {
    "extends": "@tough-griff/eslint-config-typescript",
    "parserOptions": {
      "project": "./src/tsconfig.json"
    },
    "rules": {
      "no-console": "off",
      "no-process-exit": "off",
      "import/first": "off"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
