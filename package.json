{
  "name": "rrepl",
  "version": "1.1.3",
  "description": "An improved node REPL with support for configuration.",
  "keywords": [
    "cli",
    "REPL"
  ],
  "author": "Griffin Yourick <gryphon92@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tough-griff/rrepl.git"
  },
  "main": "index.js",
  "bin": "index.js",
  "files": [
    "index.js"
  ],
  "engines": {
    "node": ">= 8.0.0"
  },
  "scripts": {
    "lint": "eslint --no-ignore *.js .noderc*",
    "start": "node index",
    "test": "jest",
    "test:cov": "nyc --reporter lcov --reporter text npm test",
    "test:cov:upload": "codecov"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^4.0.0",
    "semver": "^6.3.0"
  },
  "devDependencies": {
    "codecov": "^3.6.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "lodash": "^4.17.15",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "tmp-promise": "^2.0.2"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.spec.js"
        ],
        "env": {
          "jest": "true"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js|.noderc*": [
      "eslint --no-ignore --fix",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
