{
  "name": "rrepl",
  "version": "1.1.4",
  "description": "An improved node REPL with support for configuration.",
  "keywords": [
    "cli",
    "REPL"
  ],
  "author": "Griffin Yourick <gryphon92@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tough-griff/rrepl.git"
  },
  "main": "index.js",
  "bin": "index.js",
  "files": [
    "index.js"
  ],
  "engines": {
    "node": ">= 10.0.0"
  },
  "scripts": {
    "lint": "eslint --no-ignore *.js .noderc*",
    "start": "node index",
    "test": "jest",
    "test:cov": "nyc --reporter lcov --reporter text npm test",
    "test:cov:upload": "codecov"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^4.0.1",
    "semver": "^7.1.1"
  },
  "devDependencies": {
    "@tough-griff/eslint-config": "^1.0.3",
    "codecov": "^3.6.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "lodash": "^4.17.15",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "tmp-promise": "^2.0.2"
  },
  "eslintConfig": {
    "extends": "@tough-griff",
    "rules": {
      "no-console": "off",
      "no-process-exit": "off",
      "node/shebang": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js|.noderc*": [
      "eslint --no-ignore --fix",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
